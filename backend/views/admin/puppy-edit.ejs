<div class="row">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/puppies">Puppies</a></li>
                <li class="breadcrumb-item active"><%= puppy.name %></li>
            </ol>
        </nav>
        <h1 class="mb-4">Edit Puppy: <%= puppy.name %></h1>
    </div>
</div>

<% if (success && success.length > 0) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<% if (error && error.length > 0) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<div class="row">
    <div class="col-md-8">
        <div class="content-wrapper">
            <h3 class="mb-3">Puppy Details</h3>
            <form id="editPuppyForm" enctype="multipart/form-data">
                <input type="hidden" name="id" value="<%= puppy.id %>">
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= puppy.name %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="gender" class="form-label">Gender *</label>
                            <select class="form-select" id="gender" name="gender" required>
                                <option value="Male" <%= puppy.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                <option value="Female" <%= puppy.gender === 'Female' ? 'selected' : '' %>>Female</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="color" class="form-label">Color</label>
                            <input type="text" class="form-control" id="color" name="color" value="<%= puppy.color || '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="dob" class="form-label">Date of Birth</label>
                            <input type="date" class="form-control" id="dob" name="dob" value="<%= puppy.dob ? new Date(puppy.dob).toISOString().split('T')[0] : '' %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="text" class="form-control" id="price" name="price" value="<%= puppy.price || '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="available" <%= puppy.status === 'available' ? 'selected' : '' %>>Available</option>
                                <option value="pending" <%= puppy.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="sold" <%= puppy.status === 'sold' ? 'selected' : '' %>>Sold</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="display_order" class="form-label">Display Order</label>
                            <input type="number" class="form-control" id="display_order" name="display_order" value="<%= puppy.display_order %>">
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="is_featured" name="is_featured" <%= puppy.is_featured ? 'checked' : '' %>>
                                <label class="form-check-label" for="is_featured">
                                    Featured puppy
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="4"><%= puppy.description || '' %></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="new_main_image" class="form-label">Change Main Photo</label>
                    <input type="file" class="form-control" id="new_main_image" name="image" accept="image/*">
                    <div class="form-text">Leave empty to keep current photo</div>
                </div>
                
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a href="/admin/puppies" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="content-wrapper">
            <h3 class="mb-3">Main Photo</h3>
            <% if (puppy.main_image_url) { %>
            <img src="<%= puppy.main_image_url %>" alt="<%= puppy.name %>" class="img-fluid rounded mb-3">
            <% } else { %>
            <div class="text-center py-5 bg-light rounded">
                <i class="bi bi-camera" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-2">No main photo</p>
            </div>
            <% } %>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="content-wrapper">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Additional Photos</h3>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addImageModal">
                    <i class="bi bi-plus"></i> Add Photo
                </button>
            </div>
            
            <div class="row" id="additional-images">
                <% if (puppy.images && puppy.images.length > 0) { %>
                    <% puppy.images.forEach(image => { %>
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img src="<%= image.image_url %>" class="card-img-top" alt="<%= image.caption || 'Puppy image' %>" style="height: 150px; object-fit: cover;">
                            <div class="card-body p-2">
                                <p class="card-text small text-muted mb-1"><%= image.caption || 'No caption' %></p>
                                <button class="btn btn-sm btn-danger w-100 delete-image" data-id="<%= image.id %>">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <p class="text-muted text-center">No additional photos uploaded yet.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Add Image Modal -->
<div class="modal fade" id="addImageModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="addImageForm" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Add Photo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="additional_image" class="form-label">Select Image</label>
                        <input type="file" class="form-control" id="additional_image" name="image" accept="image/*" required>
                    </div>
                    <div class="mb-3">
                        <label for="image_caption" class="form-label">Caption</label>
                        <input type="text" class="form-control" id="image_caption" name="caption">
                    </div>
                    <div class="mb-3">
                        <label for="image_display_order" class="form-label">Display Order</label>
                        <input type="number" class="form-control" id="image_display_order" name="display_order" value="0">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-cloud-upload"></i> Upload
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
const puppyId = '<%= puppy.id %>';

// Edit puppy form handler
document.getElementById('editPuppyForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    formData.set('is_featured', formData.get('is_featured') === 'on');
    
    const submitBtn = e.target.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    
    try {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Saving...';
        
        const response = await fetch(`/admin/api/puppies/${puppyId}`, {
            method: 'PUT',
            body: formData
        });
        
        const data = await response.json();
        
        if (data.success) {
            window.location.reload();
        } else {
            alert('Error: ' + (data.message || 'Update failed'));
        }
    } catch (error) {
        alert('Error updating puppy: ' + error.message);
    } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
    }
});

// Add image form handler
document.getElementById('addImageForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const submitBtn = e.target.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    
    try {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Uploading...';
        
        const response = await fetch(`/admin/api/puppies/${puppyId}/images`, {
            method: 'POST',
            body: formData
        });
        
        const data = await response.json();
        
        if (data.success) {
            window.location.reload();
        } else {
            alert('Error: ' + (data.message || 'Upload failed'));
        }
    } catch (error) {
        alert('Error uploading image: ' + error.message);
    } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
    }
});

// Delete image handler
document.querySelectorAll('.delete-image').forEach(btn => {
    btn.addEventListener('click', async () => {
        if (!confirm('Are you sure you want to delete this image?')) {
            return;
        }
        
        const imageId = btn.dataset.id;
        
        try {
            const response = await fetch(`/admin/api/puppies/${puppyId}/images/${imageId}`, {
                method: 'DELETE'
            });
            
            const result = await response.json();
            
            if (result.success) {
                window.location.reload();
            } else {
                alert('Error: ' + (result.message || 'Delete failed'));
            }
        } catch (error) {
            alert('Error deleting image: ' + error.message);
        }
    });
});
</script>